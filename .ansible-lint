---
#
# Ansible managed
#
exclude_paths:
  - meta/preferences.yml
  - molecule/default/prepare.yml
  - molecule/default/converge.yml
  - molecule/default/verify.yml
  - molecule/default/collections.yml
  - .tox
  - .cache
  - .github
  - requirements.yml

skip_list:
  - yaml[truthy]
  - name[casing]
  - fqcn[action-core]
  - no-changed-when
  - yaml[indentation]
  - name[template]
  - risky-file-permissions
  - yaml[comments]
  - no-free-form
  - risky-shell-pipe
  - fqcn[action]
  - jinja[spacing]
  - name[missing]
  - key-order[task]
